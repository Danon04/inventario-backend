{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "rootDir": "./src",

    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,

    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
